<!DOCTYPE module PUBLIC "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "https://checkstyle.sourceforge.io/dtds/configuration_1_3.dtd">

<!--
    Custom Checkstyle configuration for the news-platform project.
    Enforces clean, consistent Java code style with a focus on:
    - UTF-8 encoding
    - Maximum line length (120 chars)
    - Exclusions for package/import and URLs
    - Error-level severity to fail the build on violations
-->
<module name="Checker">
    <!-- Global properties -->
    <property name="charset" value="UTF-8" />
    <property name="severity" value="error" />
    <property name="fileExtensions" value="java" />

    <!-- Enforce maximum line length of 120 characters -->
    <module name="LineLength">
        <property name="max" value="120" />
        <!-- Ignore lines with package, import, or URLs -->
        <property name="ignorePattern" value="^package.*|^import.*|a href|href|http://|https://|ftp://"/>
    </module>

    <!-- TreeWalker: Core code style checks will go here in the future -->
    <module name="TreeWalker">
        <!-- Example placeholder for future checks -->
        <!-- <module name="UnusedImports"/> -->
        <!-- <module name="WhitespaceAfter"/> -->
        <!-- <module name="MissingJavadocMethod"/> -->
    </module>
</module>