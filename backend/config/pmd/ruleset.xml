<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Custom PMD Rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0
                             https://pmd.github.io/pmd-6.55.0/ruleset_xml_schema.xsd"
         language="java"
         minimumPriority="3">

    <description>
        Minimal but effective PMD ruleset for a small Spring Boot project.
        Covers: code style, common bugs, error handling, and complexity.
    </description>

    <!-- Best practices -->
    <rule ref="category/java/bestpractices.xml/AvoidPrintStackTrace"/>
    <rule ref="category/java/bestpractices.xml/AvoidReassigningParameters"/>
    <rule ref="category/java/bestpractices.xml/UnusedImports"/>

    <!-- Code style -->
    <rule ref="category/java/codestyle.xml/UnnecessaryFullyQualifiedName"/>
    <rule ref="category/java/codestyle.xml/TooManyStaticImports"/>
    <rule ref="category/java/codestyle.xml/ShortVariable"/>

    <!-- Error prone -->
    <rule ref="category/java/errorprone.xml/CloseResource"/>
    <rule ref="category/java/errorprone.xml/NullAssignment"/>
    <rule ref="category/java/errorprone.xml/UseEqualsToCompareStrings"/>

    <!-- Performance -->
    <rule ref="category/java/performance.xml/AvoidInstantiatingObjectsInLoops"/>

    <!-- Complexity -->
    <rule ref="category/java/design.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="12"/>
        </properties>
    </rule>
</ruleset>
