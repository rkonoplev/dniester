# =========================================================
# application-local.yml
# Local development profile configuration.
# Uses MySQL in docker-compose with mounted Drupal dump for legacy data.
# Credentials are stored in local .env file (not committed to git).
# =========================================================

spring:
  datasource:
    url: jdbc:mysql://localhost:3306/newsdb
    username: root
    password: root
    driver-class-name: com.mysql.cj.jdbc.Driver
    hikari:
      maximum-pool-size: 5

  jpa:
    hibernate:
      ddl-auto: update        # Safe for local development
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect
    show-sql: true

logging:
  level:
    root: DEBUG