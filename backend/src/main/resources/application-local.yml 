# =========================================================
# application-local.yml
# Local developer profile, using docker-compose MySQL.
# =========================================================

spring:
  datasource:
    url: jdbc:mysql://localhost:3306/newsdb
    username: root
    password: root
    driver-class-name: com.mysql.cj.jdbc.Driver
    hikari:
      maximum-pool-size: 5

  jpa:
    hibernate:
      ddl-auto: update
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect
    show-sql: true

logging:
  level:
    root: DEBUG