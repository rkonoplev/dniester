# =========================================================
# application-dev.yml
# Development/staging or CI environment configuration.
# Credentials are always sourced from environment variables.
# =========================================================

server:
  port: ${SPRING_LOCAL_PORT:8080}

spring:
  datasource:
    url: ${SPRING_DATASOURCE_URL}
    username: ${SPRING_DATASOURCE_USERNAME}
    password: ${SPRING_DATASOURCE_PASSWORD}
    driver-class-name: com.mysql.cj.jdbc.Driver

  jpa:
    database-platform: org.hibernate.dialect.MySQLDialect
    hibernate:
      ddl-auto: update   # Auto schema update allowed in dev
    show-sql: true

logging:
  level:
    com.example.newsplatform: DEBUG
    org.springframework.security: INFO
    org.springframework.jdbc.core: DEBUG